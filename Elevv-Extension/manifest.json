{
    "manifest_version": 3,
    "name": "Elevv - AI Resume Analysis",
    "version": "1.0.0",
    "description": "Get instant AI-powered resume analysis on any job site",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup-build/index.html",
        "default_title": "Elevv - Analyze Job"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*",
                "https://linkedin.com/*",
                "https://www.indeed.com/*",
                "https://indeed.com/*",
                "https://www.glassdoor.com/*",
                "https://glassdoor.com/*",
                "https://jobs.google.com/*",
                "https://www.monster.com/*",
                "https://monster.com/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon.png"
    }
}